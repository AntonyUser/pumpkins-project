{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modues", "dist"]
}
